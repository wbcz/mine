{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "assets/*": [
        "client/assets/*"
      ],
      "common/*": [
        "client/common/*"
      ],
      "components/*": [
        "client/components/*"
      ],
      "pages/*": [
        "client/pages/*"
      ]
    },
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "outDir": "./build",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2017.object",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/**/*.ts",
    "src/types/*"
  ]
}